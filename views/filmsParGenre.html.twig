{% extends 'layout.html.twig' %}

{% block content %}
    <h2>Films pour le genre choisi : </h2>
    <p>
    {% if filmsParGenre %}
        {% for film in filmsParGenre %}
        <div class="film">
            <img width="64" src="{{ film.image }}" />
            <h3>{{ film.nom }}</h3>
            <em>Genre: {{ film.genre_nom }}</em><br />
            <a href="{{ path('film', {id: film.id}) }}">Fiche film &raquo;</a>
        </div>
        {% endfor %}
    {% else %}
        Il n'y a aucun film pour ce genre.
    {% endif %}
    </p>
{% endblock %}
